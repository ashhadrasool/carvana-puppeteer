{
  "extends": "airbnb-base",
  "env": {
    "es2022": true,
    "node": true,
    "browser": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022
  },
  "rules": {
    "max-len": ["error", { "code": 120, "ignoreComments": true }],
    "indent": ["error", 4],
    "import/extensions": "off",
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "no-await-in-loop": "off"
  },
  "globals": {
    "React": true,
    "ReactDOM": true,
    "rsuite": true,
    "icons": true,
    "i18next": true,
    "ReactI18next": true,
    "dayjs": true,
    "dayjsCustomParseFormat": true
  }
}
